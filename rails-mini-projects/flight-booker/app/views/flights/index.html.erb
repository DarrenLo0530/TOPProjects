<section class="section has-background-primary">
    <div class="container">
        <h1 class="title has-text-centered">Search Our Flights</h1>

        <%= form_with url: "/flights", method: :get, local: true do %>
            <div class="field">
                <%= label_tag :origin, "Select the origin of the flight", class: "label"%>
                <div class="control">
                    <div class="select">
                        <%= select_tag :origin, options_for_select(@airport_options) %>                
                    </div>
                </div>
            </div>
            <div class="field">
                <%= label_tag :destination, "Select the destination of the flight", class: "label"%>
                <div class="control">                
                    <div class="select">
                        <%= select_tag :destination, options_for_select(@airport_options) %>
                    </div>
                </div>
            </div>
            <div class="field">
                <%= label_tag :num_passengers, "Select the number of passengers", class: "label"%>
                <div class="control">
                    <div class="select">
                        <%= select_tag :num_passengers, options_for_select(@num_passengers_options) %>                
                    </div>
                </div>
            </div>
            <div class="field">
                <%= label_tag :take_off, "Select the take off time", class: "label"%>
                <div class="control">
                    <div class="select">
                        <%= select_tag :take_off, options_for_select(@take_off_time_options) %>                 
                    </div>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <%= submit_tag "Search Flights", class: "button is-info"%>
                </div>
            </div>
        <% end %>
    </div>
</section>
<section class="section">
    <div class="container">
        <h1 class="title has-text-centered">Results</h1>
        <% if @selected_flights.exists? %>
            <%= form_with url: "/bookings/new", method: :get, local: true do %>
                <%= render partial: "flight_option", collection: @selected_flights, as: :flight %>
                <%= submit_tag "View Flight", class: "button is-info"%>
            <% end %>
        <% else %>
            <div class="box has-background-danger">
                <h3 class="title is-5 has-text-light">No flights selected</h3>
            </div>
        <% end %>
    </div>
</section>