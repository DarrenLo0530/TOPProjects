<div class="box">
    <div class="content">
        <div class="level">
            <div class="level-left">
                <span class="is-size-3"><%= flight.origin.code %></span>
                <span class="is-size-5 mx-3">to</span>
                <span class="is-size-3"><%= flight.destination.code %></span>
            </div>

            <div class="level-right">
                <%= hidden_field_tag :num_passengers, @num_passengers %>   
                <div class="control radio">
                    <%= radio_button_tag :flight_id, flight.id, true %>
                </div>
            </div>
        </div>
        
        <div class="level">
            <div class="level-left level-item">
                <h4 class="heading mb-0 mr-3">Take Off:</h4>
                <p class="is-size-5"><%= flight.take_off_formatted %></p>
            </div>
        </div>
        <div class="level">
            <div class="level-left level-item">
                <h4 class="heading mb-0 mr-3">Flight Duration:</h4>
                <p class="is-size-5"><%= flight.flight_duration_formatted %></p>
            </div>
        </div>
    </div>
</div>