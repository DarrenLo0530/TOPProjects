<div class="col-6">
    <% if user_signed_in? %>
        <div class="card mb-5">
            <article class="card-body media">
                <figure class="img-thumbnail">
                    <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
                </figure>
                <div class="media-body">
                    <%= render partial: 'form'%>
                </div>
            </article>
        </div>
    <% end %>

    <% @tweets.each do |tweet| %>
        <div class="card">
            <article class="card-body media">
                <figure class="img-thumbnail">
                    <%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.name) %>
                </figure>
                <div class="media-body">
                    <h5 class="font-weight-bold mb-0"><%= tweet.user.name %></h5>
                    <small><%= "@#{tweet.user.username}" %></small>
                    <p><%= tweet.body %></p>
                    <% if user_signed_in? %>
                        <nav class="nav">
                            <%= link_to tweet, class: "nav-icon" do %>
                                <span><i class="fa fa-link" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to edit_tweet_path(tweet), class: "nav-icon" do%>
                                <span><i class="fa fa-pencil" aria-hidden="true"></i></span>
                            <% end %>
                            
                            <%= link_to tweet, method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "nav-icon" do %>
                                <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                            <% end %>
                        </nav>
                    <% end %>
                </div>
            </article>            
        </div>
    
    </article>
    <% end %>
</div>
